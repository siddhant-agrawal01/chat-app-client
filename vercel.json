{
    "version": 2,
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "build" }
      }
    ],
    "routes": [
      {
        "src": "/api/v1/(.*)",
        "dest": "http://127.0.0.1:8000/api/v1/$1"
      },
      {
        "src": "/ws/(.*)",
        "dest": "ws://127.0.0.1:8000/ws/$1"
      },
      {
        "src": "/media/(.*)",
        "dest": "http://127.0.0.1:8000/media/$1"
      },
      {
        "src": "/static/(.*)",
        "dest": "/static/$1"
      },
      {
        "src": "/favicon.ico",
        "dest": "/favicon.ico"
      },
      {
        "src": "/manifest.json",
        "dest": "/manifest.json"
      },
      {
        "src": "/(.*)",
        "dest": "/index.html"
      }
    ],
    "rewrites": [
      { "source": "/api/v1/users/:path*", "destination": "http://127.0.0.1:8000/api/v1/users/:path*" },
      { "source": "/api/v1/signup", "destination": "http://127.0.0.1:8000/api/v1/signup" },
      { "source": "/api/v1/users/:userId/chats", "destination": "http://127.0.0.1:8000/api/v1/users/:userId/chats" },
      { "source": "/api/v1/chats/:chatId/messages", "destination": "http://127.0.0.1:8000/api/v1/chats/:chatId/messages" },
      { "source": "/ws/users/:userId/chat", "destination": "ws://127.0.0.1:8000/ws/users/:userId/chat" },
      { "source": "/media/user/:path*", "destination": "http://127.0.0.1:8000/media/user/:path*" }
    ],
    "headers": [
      {
        "source": "/(.*)",
        "headers": [
          { "key": "Access-Control-Allow-Credentials", "value": "true" },
          { "key": "Access-Control-Allow-Origin", "value": "*" },
          { "key": "Access-Control-Allow-Methods", "value": "GET,OPTIONS,PATCH,DELETE,POST,PUT" },
          { "key": "Access-Control-Allow-Headers", "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version, Authorization" }
        ]
      }
    ]
  }